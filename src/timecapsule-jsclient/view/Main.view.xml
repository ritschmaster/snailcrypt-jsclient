<?xml version="1.0" encoding="utf-8"?>
<mvc:View
    controllerName="timecapsule-jsclient.controller.Main"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:mvc="sap.ui.core.mvc">
  <VBox class="sapUiSmallMargin">
    <grid:CSSGrid
        gridTemplateColumns="auto
                             auto"
        gridTemplateRows="auto
                          auto
                          auto
                          auto
                          auto
                          auto
                          auto
                          auto
                          auto
                          auto"
        gridGap="auto"
        gridColumnGap="10%"
        width="100%">

      <!--
          1. row
      -->
      <VBox>
        <Label text="Text to be encrypted:"
               labelFor="toBeEncryptedTextArea"
               width="100%" />
      </VBox>
      <VBox>
        <Label text="Text to be decrypted:"
               labelFor="toBeDecryptedTextArea"
               width="100%" />
      </VBox>

      <!--
          2. row
      -->
      <VBox>
        <TextArea id="toBeEncryptedTextArea"
                  required="true"
                  rows="20"
                  change="onTextToBeEncrytedChanged"
                  width="100%" />
      </VBox>
      <VBox>
        <TextArea id="toBeDecryptedTextArea"
                  required="true"
                  rows="20"
                  change="onTextToBeDecryptedChanged"
                  width="100%" />
      </VBox>

      <!--
          3. row
      -->
      <VBox class="sapUiSmallMarginTop">
        <HBox width="100%">
          <Label text="Encrypted until:"
                 labelFor="encryptionDateTimePicker"
            class="sapUiSmallMarginEnd"       />
          <DateTimePicker id="encryptionDateTimePicker"
                          required="true"
                          valueFormat="yyyy-MM-ddTHH:mm:ssZ"
                          displayFormat="short"
                          placeholder="Expiration date time"
                          change="onEncryptionDateTimePickerChanged" />
        </HBox>
      </VBox>
      <VBox class="sapUiSmallMarginTop">
        <VBox />
      </VBox>

      <!--
          4. row
      -->
      <Button text="Encypt"
              press="onEncryptPressed"
              class="sapUiSmallMarginTop" />

      <Button text="Decrypt"
              press="onDecryptPressed"
              class="sapUiSmallMarginTop" />

      <!--
          5. row
      -->
      <VBox class="sapUiSmallMarginTop">
        <Label id="encryptedLabel"
               text="Encrypted text:"
               labelFor="encryptedTextArea"
               visible="false"
               width="100%" />
        <VBox />
      </VBox>
      <VBox class="sapUiSmallMarginTop">
        <Label id="decryptedLabel"
               text="Decrypted text:"
               labelFor="decryptedTextArea"
               visible="false"
               width="100%" />
        <VBox />
      </VBox>

      <!--
          7. row
      -->
      <VBox class="sapUiSmallMarginTop">
        <VBox />
      </VBox>
      <VBox class="sapUiSmallMarginTop">
        <HBox>
          <Label id="decryptedDateTimeLabel"
                 text="Encrypted until:"
                 labelFor="decryptedDateTimePicker"
                 visible="false"
                 class="sapUiSmallMarginEnd" />
          <DateTimePicker id="decryptedDateTimePicker"
                          editable="false"
                          visible="false"
                          valueFormat="yyyy-MM-ddTHH:mm:ssZ"
                          displayFormat="short"
                          placeholder="Expiration date time" />
        </HBox>
        <VBox />
      </VBox>

      <!--
          8. row
      -->
      <VBox>
        <TextArea id="encryptedTextArea"
                  editable="false"
                  visible="false"
                  rows="20"
                  width="100%" />
      </VBox>
      <VBox>
        <TextArea id="decryptedTextArea"
                  editable="false"
                  visible="false"
                  rows="20"
                  width="100%" />
      </VBox>

      <!--
          10. row
      -->
      <VBox class="sapUiSmallMarginTop">
        <VBox>
          <Link id="timerLink"
                text="Timer URL"
                visible="false" />
          <Label id="timerWarningLabel"
                 text="Caution: the link is > 2000 characters long. This might not be supported by all browsers."
                 visible="false" />
        </VBox>
      </VBox>
      <VBox class="sapUiSmallMarginTop">
        <VBox />
      </VBox>
    </grid:CSSGrid>

    <mvc:XMLView viewName="timecapsule-jsclient.view.CookieMessageStrip" />
  </VBox>
</mvc:View>
