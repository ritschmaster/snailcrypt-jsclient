FROM php:8.0-apache

RUN apt-get update
RUN apt-get upgrade -y

RUN apt-get install -y libicu-dev
RUN docker-php-ext-install intl
RUN docker-php-ext-enable intl

RUN a2enmod rewrite
RUN a2enmod headers
